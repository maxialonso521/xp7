      "width": 450,
      "height": 350,
      "content": "<style>.weather-container{padding:25px;background:linear-gradient(135deg,rgba(33,150,243,0.2),rgba(3,169,244,0.1));border-radius:15px;height:100%;display:flex;flex-direction:column;color:white}.weather-header{text-align:center;margin-bottom:25px}.weather-header h2{margin:0;font-size:28px;display:flex;align-items:center;justify-content:center;gap:10px}.weather-input{display:flex;gap:10px;margin-bottom:25px}.weather-input input{flex:1;padding:12px 15px;background:rgba(255,255,255,0.1);border:1px solid rgba(255,255,255,0.2);border-radius:8px;color:white;font-size:14px}.weather-input input::placeholder{color:rgba(255,255,255,0.5)}.weather-input button{padding:12px 20px;background:linear-gradient(135deg,#2196F3,#1976D2);border:none;border-radius:8px;color:white;cursor:pointer;font-weight:600;transition:all 0.3s}.weather-input button:hover{transform:translateY(-2px);box-shadow:0 4px 12px rgba(33,150,243,0.4)}.weather-result{flex:1;display:flex;flex-direction:column;align-items:center;justify-content:center;gap:15px}.weather-icon{font-size:72px}.weather-temp{font-size:48px;font-weight:bold}.weather-desc{font-size:18px;color:rgba(255,255,255,0.8)}.weather-details{display:grid;grid-template-columns:1fr 1fr;gap:15px;width:100%;margin-top:20px}.weather-detail{background:rgba(255,255,255,0.1);padding:12px;border-radius:8px;text-align:center}.weather-detail-label{font-size:12px;color:rgba(255,255,255,0.6);margin-bottom:5px}.weather-detail-value{font-size:18px;font-weight:600}</style><div class=\"weather-container\"><div class=\"weather-header\"><h2><span>üå§Ô∏è</span><span>Weather XP7</span></h2></div><div class=\"weather-input\"><input type=\"text\" id=\"cityInput\" placeholder=\"Ingresa una ciudad...\" value=\"Santiago\"><button onclick=\"getWeather()\">üîç Buscar</button></div><div id=\"weatherResult\" class=\"weather-result\"><p style=\"color:rgba(255,255,255,0.5)\">Ingresa una ciudad para ver el clima</p></div></div><script>async function getWeather(){const city=document.getElementById('cityInput').value;const result=document.getElementById('weatherResult');if(!city){result.innerHTML='<p style=\"color:#f44336\">‚ö†Ô∏è Ingresa una ciudad</p>';return}result.innerHTML='<i class=\"fas fa-spinner fa-spin\" style=\"font-size:48px\"></i><p>Cargando...</p>';try{const mockData={Santiago:{temp:22,desc:'Soleado',icon:'‚òÄÔ∏è',humidity:45,wind:15},Madrid:{temp:18,desc:'Nublado',icon:'‚òÅÔ∏è',humidity:60,wind:20},Tokyo:{temp:25,desc:'Lluvia',icon:'üåßÔ∏è',humidity:75,wind:12}};await new Promise(r=>setTimeout(r,800));const data=mockData[city]||{temp:20,desc:'Despejado',icon:'üå§Ô∏è',humidity:50,wind:10};result.innerHTML=`<div class=\"weather-icon\">${data.icon}</div><div class=\"weather-temp\">${data.temp}¬∞C</div><div class=\"weather-desc\">${data.desc}</div><div class=\"weather-details\"><div class=\"weather-detail\"><div class=\"weather-detail-label\">üíß Humedad</div><div class=\"weather-detail-value\">${data.humidity}%</div></div><div class=\"weather-detail\"><div class=\"weather-detail-label\">üí® Viento</div><div class=\"weather-detail-value\">${data.wind} km/h</div></div></div>`}catch(error){result.innerHTML='<p style=\"color:#f44336\">‚ùå Error al obtener datos</p>'}}</script>"
