      "width": 600,
      "height": 450,
      "content": "<style>.notes-container{height:100%;display:flex;flex-direction:column;background:linear-gradient(135deg,rgba(76,175,80,0.1),rgba(69,160,73,0.05));color:white}.notes-toolbar{display:flex;gap:8px;padding:12px;background:rgba(0,0,0,0.3);border-bottom:1px solid rgba(255,255,255,0.1)}.notes-btn{padding:8px 12px;background:rgba(255,255,255,0.1);border:none;border-radius:5px;color:white;cursor:pointer;font-size:13px;transition:all 0.2s}.notes-btn:hover{background:rgba(255,255,255,0.2)}.notes-editor{flex:1;display:flex}.notes-textarea{flex:1;background:rgba(0,0,0,0.2);color:white;border:none;padding:20px;font-family:monospace;font-size:14px;line-height:1.6;resize:none}.notes-textarea:focus{outline:none;background:rgba(0,0,0,0.3)}.notes-preview{flex:1;padding:20px;background:rgba(0,0,0,0.1);border-left:1px solid rgba(255,255,255,0.1);overflow-y:auto;display:none}.notes-preview.active{display:block}.notes-status{padding:8px 15px;background:rgba(0,0,0,0.3);border-top:1px solid rgba(255,255,255,0.1);font-size:12px;color:rgba(255,255,255,0.6)}</style><div class=\"notes-container\"><div class=\"notes-toolbar\"><button class=\"notes-btn\" onclick=\"formatText('**','**')\"><b>B</b></button><button class=\"notes-btn\" onclick=\"formatText('*','*')\"><i>I</i></button><button class=\"notes-btn\" onclick=\"formatText('# ','')\">H1</button><button class=\"notes-btn\" onclick=\"formatText('- ','')\">‚Ä¢</button><button class=\"notes-btn\" onclick=\"clearNotes()\">üóëÔ∏è</button><button class=\"notes-btn\" onclick=\"togglePreview()\">üëÅÔ∏è</button></div><div class=\"notes-editor\"><textarea id=\"notesText\" class=\"notes-textarea\" placeholder=\"# Mi nota\\n\\nEscribe aqu√≠ en Markdown...\\n\\n**Negrita** *Cursiva*\\n\\n- Lista\\n- De items\"></textarea><div id=\"notesPreview\" class=\"notes-preview\"></div></div><div class=\"notes-status\">üíæ <span id=\"saveStatus\">Listo</span> ‚Ä¢ <span id=\"charCount\">0</span> caracteres</div></div><script>const textarea=document.getElementById('notesText');const preview=document.getElementById('notesPreview');const saveStatus=document.getElementById('saveStatus');const charCount=document.getElementById('charCount');let saveTimer;textarea.oninput=()=>{clearTimeout(saveTimer);saveStatus.textContent='Guardando...';charCount.textContent=textarea.value.length;saveTimer=setTimeout(()=>{saveStatus.textContent='‚úì Guardado'},800)};function formatText(before,after){const start=textarea.selectionStart;const end=textarea.selectionEnd;const text=textarea.value;const selected=text.substring(start,end)||'texto';textarea.value=text.substring(0,start)+before+selected+after+text.substring(end);textarea.focus();textarea.setSelectionRange(start+before.length,start+before.length+selected.length)}function clearNotes(){if(confirm('¬øBorrar todo el contenido?')){textarea.value='';saveStatus.textContent='Limpiado';charCount.textContent='0'}}function togglePreview(){const isActive=preview.classList.toggle('active');if(isActive){preview.innerHTML=textarea.value.replace(/\\n/g,'<br>').replace(/\\*\\*(.+?)\\*\\*/g,'<b>$1</b>').replace(/\\*(.+?)\\*/g,'<i>$1</i>').replace(/^# (.+)$/gm,'<h1>$1</h1>').replace(/^- (.+)$/gm,'<li>$1</li>')}}charCount.textContent=textarea.value.length</script>"
